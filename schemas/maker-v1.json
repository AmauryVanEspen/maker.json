[
  {
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/rrbaker/maker.json/gh-pages/schemas/schema-v1.json",
    "type": "object",
    "required": [
      "name",
      "status",
      "type"
    ],
    "properties": {
      "name": {
        "title": "name",
        "description": "Name of space or community",
        "type": "string",
        "minLength": 1
      },
      "status": {
        "title": "status",
        "description": "Status",
        "type": "array",
        "default": "active",
        "enum": [
          "active",
          "inactive",
          "planned",
          "unknown"
        ]
      },
      "type": {
        "title": "type",
        "description": "Type of space",
        "type": "array",
        "enum": [
          "Makerspace",
          "Hackerspace",
          "Innovation Lab",
          "Education Lab",
          "Coworking space",
          "Incubator",
          "Accelerator",
          "Library",
          "Fab Lab",
          "TechShop"
        ]
      },
      "description": {
        "title": "description",
        "description": "A brief description of the space, mission, vision, and/or values.",
        "type": "string"
      },
      "source": {
        "title": "source",
        "description": "The source for this record",
        "type": "string"
      },
      "address": {
        "title": "address",
        "description": "The street address or relative location of the space, or if it is virtual",
        "type": "string"
      },
      "city": {
        "title": "city",
        "description": "City",
        "type": "string"
      },
      "stateRegionProvince": {
        "title": "stateRegionProvince",
        "description": "State, Region, or Province",
        "type": "string"
      },
      "country": {
        "title": "country",
        "description": "Country",
        "type": "string"
      },
      "latitude": {
        "title": "latitude",
        "description": "Latitude",
        "type": "float"
      },
      "longitude": {
        "title": "longitude",
        "description": "Longitude",
        "type": "float"
      },
      "phone": {
        "title": "phone",
        "description": "Main phone number",
        "type": "string"
      },
      "webste": {
        "title": "website",
        "description": "Main Website URL",
        "type": "string"
      },
      "social": {
        "title": "social",
        "description": "Social and network URLs",
        "type": "array",
        "items": {
          "title": "name",
          "url": "URL",
          "type": "string"
        },
        "uniqueItems": true
      },
      "id": {
        "title": "schema URL",
        "description": "maker.json schema URL",
        "type": "string",
        "default": "https://raw.githubusercontent.com/rrbaker/maker.json/gh-pages/schemas/schema-v1.json"
      },
      "lastUpdated": {
        "title": "lastUpdated",
        "description": "Last updated",
        "type": "date"
      },
      "photo": {
        "title": "photo",
        "description": "A photograph or logo for the space",
        "type": "file"
      },
      "tools": {
        "title": "tools",
        "description": "A list of available tools on site",
        "type": "array",
        "items": {
          "title": "tool",
          "type": "string"
        },
        "uniqueItems": true
      },
      "mailingList": {
        "title": "mailingList",
        "description": "A website or email address to join a mailing list",
        "type": "string"
      },
      "openToExchanges": {
        "title": "openToExchanges",
        "description": "Is the space open to exchanges?",
        "type": "boolean"
      },
      "dateFounded": {
        "title": "dateFounded",
        "description": "About when was a the space founded?",
        "type": "date"
      },
      "numberOfMembers": {
        "title": "numberOfMembers",
        "description": "Average number of members",
        "type": "integer"
      },
      "membershipFee": {
        "title": "membershipFee",
        "description": "Is there a fee (annual, monhtly, per visit or otherwise) for members?",
        "type": "boolean"
      },
      "memberFeeDetails": {
        "title": "memberFeeDetails",
        "description": "Details about the membership fee (could be a URL for more information)",
        "type": "string"
      },
      "opentoResidencies": {
        "title": "opentoResidencies",
        "description": "Is the space open to residencies?",
        "type": "boolean"
      },
      "sizeOfRooms": {
        "title": "sizeOfRooms",
        "description": "Average size of the rooms in your space",
        "type": "string"
      }
    }
  }
]
