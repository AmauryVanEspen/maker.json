{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "participants": {
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "email": {
          "title": "Email",
          "type": "string"
        },
        "github": {
          "title": "Github Username",
          "type": "string"
        },
        "twitter": {
          "title": "Twitter Username",
          "type": "string"
        },
        "url": {
          "title": "URL",
          "type": "string"
        },
        "role": {
          "title": "Role",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "status", "name"
  ],
  "properties": {
    "name": {
      "title": "Name",
      "type": "string"
    },
    "status": {
      "title": "Status",
      "type": "string",
      "default": "Alpha",
      "enum": [
        "Ideation",
        "Alpha",
        "Beta",
        "Production",
        "Archival"
      ]
    },
    "description": {
      "title": "Description",
      "type": "string"
    },
    "thumbnailUrl": {
      "title": "Thumbnail URL",
      "type": "string"
    },
    "geography": {
      "title": "Geography",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "type": "string"
    },
    "contact": {
      "required": ["name"],
      "title": "Contact",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "minLength": 1
        },
        "email": {
          "title": "Email",
          "type": "string"
        },
        "github": {
          "title": "GitHub Username",
          "type": "string"
        },
        "twitter": {
          "title": "Twitter Username",
          "type": "string"
        },
        "url": {
          "title": "URL",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "people": {
      "title": "People",
      "type": "array",
      "items": {
        "title": "Person",
        "$ref": "#/definitions/participants"
      },
      "uniqueItems": true
    },
    "organizations": {
      "title": "Organizations",
      "type": "array",
      "items": {
        "title": "Organization",
        "$ref": "#/definitions/participants"
      },
      "uniqueItems": true
    },
    "data": {
      "title": "Data",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "url": {
          "title": "URL",
          "type": "string"
        }
      }
    }
    },
    "tags": {
      "title": "Tags",
      "type": "array",
      "items": {
        "title": "Tag",
        "type": "string"
      },
      "uniqueItems": true
    },
    "links": {
      "title": "Links",
      "type": "array",
      "items": {
        "title": "URL",
        "type": "string"
      },
      "uniqueItems": true
    }
  }
}
