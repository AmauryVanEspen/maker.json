{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/DCgov/civic.json/master/schema.json",
  "type": "object",
  "required": [
    "status",
    "name"
  ],
  "properties": {
    "name": {
      "title": "Name",
      "type": "string"
    },
    "status": {
      "title": "Status",
      "type": "string",
      "default": "Alpha",
      "enum": [
        "Ideation",
        "Alpha",
        "Beta",
        "Production",
        "Archival"
      ]
    },
    "contact": {
      "required": [
        "name"
      ],
      "title": "Contact",
      "type": "object",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "minLength": 1
        },
        "email": {
          "title": "Email",
          "type": "string"
        },
        "url": {
          "title": "URL",
          "type": "string"
        }
      }
    },
    "partners": {
      "title": "Partners",
      "type": "array",
      "items": {
        "required": [
          "name"
        ],
        "title": "Partner",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "email": {
            "title": "Email",
            "type": "string"
          },
          "url": {
            "title": "URL",
            "type": "string"
          }
        }
      }
    },
    "description": {
      "title": "Description",
      "type": "string"
    },
    "type": {
      "title": "Type",
      "type": "string"
    },
    "license": {
      "title": "License",
      "type": "string"
    },
    "homepage": {
      "title": "Homepage URL",
      "type": "string"
    },
    "thumbnail": {
      "title": "Thumbnail URL",
      "type": "string"
    },
    "repository": {
      "title": "Repository",
      "type": "string"
    },
    "geography": {
      "title": "Geographic Tags",
      "type": "array",
      "items": {
        "title": "Tag",
        "type": "string"
      }
    },
    "data": {
      "title": "Data",
      "type": "array",
      "items": {
        "required": [
          "name",
          "url"
        ],
        "type": "object",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "url": {
            "title": "Direct URL",
            "type": "string"
          },
          "metadata": {
            "title": "Metadata URL",
            "type": "string"
          }
        }
      },
      "uniqueItems": true
    },
    "keywords": {
      "title": "Keywords",
      "type": "array",
      "items": {
        "title": "Keyword",
        "type": "string"
      },
      "uniqueItems": true
    },
    "links": {
      "title": "Links",
      "type": "array",
      "items": {
        "title": "URL",
        "type": "string"
      },
      "uniqueItems": true
    },
    "id": {
      "title": "Schema URL",
      "type": "string",
      "default": "https://raw.githubusercontent.com/DCgov/civic.json/master/schema.json"
    }
  }
}
